rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 1. Shared Content Pools (Read-Only for Authenticated Users)
    
    // Original shared bank (Legacy/Shared)
    match /content_bank/{docId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Shared Snake Phoneme Pool (New) - Read-only for authenticated users
    match /snake_phoneme_pool/{docId} {
      allow read: if request.auth != null;
      allow write: if false; // Admin only via script
    }

    // User profiles & all nested subcollections (including snake_progress AND stats)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow access to all subcollections under the user document
      // This includes 'stats', 'snake_progress', 'activity_logs', etc.
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Aggregated snake progress per user (Legacy/Redundant if moving to subcollections, but keeping for safety)
    match /user_progress/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Snake attempt logs (per game session)
      match /snake_attempts/{attemptId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    // Snake Game Phonemes
    match /snake_phoneme_pool/{docId} {
      allow read: if request.auth != null;
      allow write: if false; 
    }

    // Turtle Game Sentences
    match /turtle_content_pool/{docId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // 2. User Data (Read/Write for Owner)
    
    // Matches the user doc AND any subcollection (stats, snake_progress, turtle_progress, etc.)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // 3. Legacy/Root Collections (Cleanup later)
    match /user_progress/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}